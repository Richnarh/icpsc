<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="icpscPU" transaction-type="JTA">
    <jta-data-source>jdbc/icpsc</jta-data-source>
    <class>com.khoders.icpsc.entities.Cart</class>
    <class>com.khoders.icpsc.entities.Category</class>
    <class>com.khoders.icpsc.entities.CompanyBranch</class>
    <class>com.khoders.icpsc.entities.CompanyProfile</class>
    <class>com.khoders.icpsc.entities.Customer</class>
    <class>com.khoders.icpsc.entities.Inventory</class>
    <class>com.khoders.icpsc.entities.InventoryItem</class>
    <class>com.khoders.icpsc.entities.ItemType</class>
    <class>com.khoders.icpsc.entities.PettyTransaction</class>
    <class>com.khoders.icpsc.entities.PettyTransactionItem</class>
    <class>com.khoders.icpsc.entities.Product</class>
    <class>com.khoders.icpsc.entities.PurchaseOrder</class>
    <class>com.khoders.icpsc.entities.PurchaseOrderItem</class>
    <class>com.khoders.icpsc.entities.SalesCatalogue</class>
    <class>com.khoders.icpsc.entities.UserAccount</class>
    <class>com.khoders.icpsc.entities.UserPermissions</class>
    <class>com.khoders.icpsc.entities.sms.GroupContact</class>
    <class>com.khoders.icpsc.entities.sms.MessageTemplate</class>
    <class>com.khoders.icpsc.entities.sms.SMSGrup</class>
    <class>com.khoders.icpsc.entities.sms.SenderId</class>
    <class>com.khoders.icpsc.entities.sms.Sms</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
